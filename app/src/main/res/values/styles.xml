<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="startButton">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="introText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/regularText</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
        <item name="android:layout_above">@+id/button_start</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingBottom">@dimen/paddingBottom</item>
        <item name="android:paddingTop">@dimen/paddingTop</item>
        <item name="android:paddingLeft">@dimen/paddingLeft</item>
        <item name="android:paddingRight">@dimen/paddingRight</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
    </style>
    <style name="infoText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/regularText</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/additional</item>
    </style>
    <style name="button">
        <item name="android:text">@dimen/title</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:paddingTop">@dimen/paddingLargeTop</item>
        <item name="android:paddingBottom">@dimen/paddingLargeBottom</item>
        <item name="android:paddingRight">@dimen/paddingRightButton</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="view">
        <item name="android:layout_height">@dimen/viewHeight</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="title" parent="TextAppearance.AppCompat">
        <item name="android:text">@dimen/title</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/title2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">@dimen/paddingTop</item>
        <item name="android:paddingBottom">@dimen/paddingBottom</item>
    </style>
    <style name="title2" parent="TextAppearance.AppCompat">
        <item name="android:text">@dimen/title</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:paddingLeft">@dimen/paddingLeft</item>
        <item name="android:paddingRight">@dimen/paddingRight</item>
        <item name="android:paddingTop">@dimen/paddingTop</item>
        <item name="android:paddingBottom">@dimen/paddingBottom</item>
    </style>
    <style name="LinearL1">
        <item name="android:paddingRight">@dimen/paddingRight</item>
        <item name="android:paddingLeft">@dimen/paddingLeft</item>
    </style>
    <style name="Image">
        <item name="android:layout_height">@dimen/ImageHeight</item>
        <item name="android:paddingBottom">@dimen/paddingBottom</item>
        <item name="android:paddingTop">@dimen/paddingTop</item>
    </style>
    <style name="LinearL2">
        <item name="android:paddingBottom">@dimen/paddingBottom2</item>
        <item name="android:paddingRight">@dimen/paddingRight2</item>
        <item name="android:paddingLeft">@dimen/paddingLeft</item>
    </style>
    <style name="time" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/time</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">@dimen/paddingLeft</item>
    </style>
</resources>
